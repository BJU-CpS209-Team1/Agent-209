<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Battle_Platformer_Xamarin.EndGameScore"
             BackgroundImage="bg_castle.png">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblCongrats"/>
            <Entry x:Name="entName" Placeholder="Enter your name here" Completed="entName_Completed"/>
            <Button x:Name="btnDone" Text="Done" Clicked="btnDone_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>