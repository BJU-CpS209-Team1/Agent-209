<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Battle_Platformer_Xamarin.HighScoresPage"
             BackgroundImage="bg_castle.png">

    <ContentPage.Content>
        <StackLayout Padding="30">
            <Image Source="LeaderboardTitle.png" HorizontalOptions="Center"/>
            <Button x:Name="btnBack" Text="Main Page" FontSize="30" TextColor="WhiteSmoke" HorizontalOptions="Start" BackgroundColor="DarkGray"
                    Clicked="btnBack_Clicked"/>
            <StackLayout x:Name="scoresHolder" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Label x:Name="message" VerticalOptions="Start"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>