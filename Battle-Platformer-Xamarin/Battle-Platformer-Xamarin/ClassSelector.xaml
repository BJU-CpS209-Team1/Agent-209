<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Battle_Platformer_Xamarin.ClassSelector">
    <ContentPage.Content>
        <StackLayout 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Label Text="Select Character Class" />
            <Button x:Name="btnGunner" Text="Gunner" Clicked="BtnGunner_Clicked" />
            <Button x:Name="btnSupport" Text="Support" Clicked="BtnSupport_Clicked" />
            <Button x:Name="btnTank" Text="Tank" Clicked="BtnTank_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>